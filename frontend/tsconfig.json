{
    "compilerOptions": {
      "target": "es5",
      "jsx": "react",
      "allowSyntheticDefaultImports": true,
      "module": "commonjs",
      "lib": ["es2015", "dom"],
      "outDir": "./dist",
      "sourceMap": true,
      "noImplicitAny": true,
      "removeComments": true
    },
    "include": ["src/**/*", "./src/index.d.ts"],
    "exclude": ["node_modules"],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true

  }